<%- include("partials/header"); -%> <%- include("partials/navbar"); -%>
<body class="mt-[85px] font-roboto">
  <div class="flex flex-col h-auto">

  
<div class="w-full p-4">
  <div class="hidden md:flex items-center">
    <div class="w-2/3">
      <img
        src="/images/Skin_Insights_Banner_2_1600x (1).jpg"
        class="w-full h-[600px] object-contain"
        alt="Salicylic Acid Face Serum"
      />
    </div>
    <div class="w-1/3 flex justify-center items-center p-6">
      <div class="text-center">
        <h5 class="text-2xl font-bold">Know Your Skin, Find the Perfect Care</h5>
        <p class="text-sm mt-3">
          Understand your skin concerns and shop with confidence. Whether you're dealing with acne,
           pigmentation, 
          or dryness, find the perfect product from our skincare category to restore your skin’s natural glow and health.
        </p>
        <a
          href="/products/viewallproducts/?filterbycategory=67598bc2c2a08ec544d22d8c"
          class="no-underline mt-4 inline-block bg-black text-white py-2 px-4 rounded-md hover:bg-gray-800 transition-all"
          >Skin Care</a
        >
      </div>
    </div>
  </div>

  <div class="flex flex-col md:hidden items-center space-y-6">
    <img
      src="/images/Skin_Insights_Banner_2_1600x (1).jpg"
      class="w-full max-h-[400px] object-contain"
      alt="Salicylic Acid Face Serum"
    />
    <div class="text-center px-4">
      <h5 class="text-xl font-bold">Salicylic Acid Face Serum</h5>
      <p class="text-base mt-2">
        A daily gentle exfoliant with 2% salicylic acid that wards off acne,
        blackheads, and keeps your oils in check for that flawless matte look.
      </p>
      <a
        href="#"
        class="no-underline mt-4 inline-block bg-black text-white py-2 px-4 rounded hover:bg-gray-800 transition-all"
        >View More</a
      >
    </div>
  </div>
</div>

    
    <div class="flex justify-center  lg:p-10"  >

      <div class="flex gap-2 w-full  justify-center">
      
        <section class="w-full max-w-[1430px] bg-white p-3 lg:p-10">
          <div class="container py-6 w-full">
            <h2 class="text-2xl font-bold mb-6">New Launches</h2>
          
            <div class="relative">
              <!-- Enable horizontal scrolling on small screens -->
              <div
                id="productContainer"
                class="flex gap-6 overflow-x-auto md:overflow-hidden scrollbar-thin scrollbar-thumb-gray-400 scrollbar-track-gray-200"
              >
                <% if (products) { %> 
                <% products.forEach((product) => { %>
                <div
                  class="min-w-[250px] max-w-[250px] min-h-[640px] relative bg-white rounded-md p-4 cursor-pointer flex flex-col justify-between group"
                  onclick="getProduct('<%= product._id %>')"
                >
                  <% if (product.discountpercentage) { %>
                  <div class="absolute top-2 left-3 bg-black text-white text-sm font-bold px-2 py-1 rounded z-10">
                    <%= `-${product.discountpercentage}%` %>
                  </div>
                  <% } %>
                  <div class="overflow-hidden min-h-[350px] w-full flex justify-center items-center">
                    <img
                      src="<%= product.images[0] %>"
                      alt="Product Name"
                      class="w-full h-full object-cover transform transition-transform duration-500 hover:scale-110"
                    />
                  </div>
                  <div class="flex flex-col justify-start items-start mt-4 text-left">
                    <h3 class="text-lg font-semibold relative group-hover:text-black">
                      <%= product.productname %>
                      <div class="absolute bottom-0 left-0 w-0 h-[2px] bg-black transition-all duration-500 ease-out group-hover:w-full"></div>
                    </h3>
                    <p class="text-gray-500 text-sm mt-2">
                      <%= Array.isArray(product.ingredients) ? product.ingredients.join(', ') : '' %>
                    </p>
                    <div class="mt-2 mb-2">
                      <span class="text-black font-bold text-lg"><%= `₹${product.saleprice}` %></span>
                      <% if (product.discountpercentage) { %>
                      <span class="line-through text-gray-500 text-sm ml-2"><%= `₹${product.regularprice}` %></span>
                      <% } %>
                    </div>
                  </div>
                  <button class="bg-black text-white px-4 py-2 w-full hover:bg-gray-800 transition-all mt-auto">
                    View item
                  </button>
                </div>
                <% }) %> 
                <% } %>
              </div>
          
              <!-- Navigation Buttons -->
              <div class="absolute top-1/2 left-0 transform -translate-y-1/2 p-2 text-black cursor-pointer hidden md:block" id="prevBtn">
                <span class="text-xl"><i class="bi bi-chevron-left"></i></span>
              </div>
              <div class="absolute top-1/2 right-0 transform -translate-y-1/2 p-2 text-black cursor-pointer hidden md:block" id="nextBtn">
                <span class="text-xl"><i class="bi bi-chevron-right"></i></span>
              </div>
            </div>
          
            <div class="flex justify-center mt-8">
              <button class="border border-black font-semibold px-6 py-2 hover:bg-black hover:text-white transition-all" onclick="viewall()">
                View all products
              </button>
            </div>
          </div>
          
        </section>
      </div>
      
    </div>

   

  </div>

  <div class="p-4 md:p-6 m-2 md:m-3 text-center">
    <div class="flex justify-center">
      <h1 class="font-semibold text-2xl md:text-5xl lg:text-4xl leading-tight max-w-[800px]">
        The future of personal care is here
      </h1>
    </div>
  
    <div class="flex justify-center items-center m-2">
      <h1 class="text-sm md:text-base lg:text-lg text-gray-700 max-w-[700px]">
        Embrace <strong>PurelyYou</strong>, where each element is chosen for its 
        scientific merit, offering you authentic, effective skincare solutions.
      </h1>
    </div>
  </div>
  

  <div class="h-auto p-10">
    <div class="mb-6 flex justify-center md:justify-start ml-7">
      <h1 class="text-2xl font-bold px-3">Shop by Category</h1>
    </div>

    <% if (category) { %>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 justify-items-center p-3 rounded-lg"
    >
      <% category.forEach((category) => { %>
      <div
        class="relative group transition-all duration-200 cursor-pointer categoryview"
      >
        <div onclick="categoryview('<%= category._id  %>')">
          <div class="overflow-hidden">
            <img
              src="<%= `/uploads/${category.image}` %>"
              class="h-[250px] w-[250px] object-cover transform transition-all duration-200 group-hover:scale-110"
              alt="<%= category.categoryname %>"
            />
          </div>

          <div class="text-center mt-3 relative">
            <p
              class="text-xl font-semibold inline-block relative transition-all duration-300"
            >
              <span
                class="absolute bottom-0 left-0 w-0 h-[3px] bg-black transition-all duration-300 group-hover:w-full"
              ></span>
              <%= category.categoryname %>
            </p>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
    <% } %>
  </div>

  <div class="p-6 m-3">
    <div class="flex justify-center">
      <h1 class="font-semibold text-3xl sm:text-2xl text-center">Subscribe To Newsletter</h1>
    </div>
  
    <div class="flex justify-center p-3">
      <h1 class="text-center text-base sm:text-sm">Subscribe to our newsletter to get amazing offers in future.</h1>
    </div>
  
    <div class="flex justify-center p-5">
      <form id="newsletter-form" class="flex flex-col sm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-4">
        <input
          type="email"
          name="newsletter"
          id="email-input"
          class="p-3 rounded-md border-2 border-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-800 transition-all duration-300 transform focus:scale-100 w-full sm:w-64"
          placeholder="Enter your email"
        />
        <button type="submit" class="text-white bg-black rounded-md p-3 w-full sm:w-auto">
          Get in touch
        </button>
      </form>
    </div>
  </div>
  
<div id="notification" class=" text-sm mt-2 ">
</div>
<script src="/javascript/user/userhome.js"></script>
  <%- include('partials/footer'); -%>
