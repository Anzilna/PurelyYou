<%- include("partials/header"); -%>
<body class="mt-[90px] bg-gray-50 font-roboto">
  <%- include("partials/navbar"); -%> <%-
  include("partials/headerForUserManagement"); -%>

  <div class="grid-cols-12 grid lg:px-[250px] py-14 gap-3 min-h-screen">
    <%- include("partials/sidebarForUserManagement"); -%>

    <div class="col-span-10 md:col-span-8 ">
      <div class="font-light items-center text-sm md:text-lg pb-[40px] flex justify-center">
        <p>You can manage your address here</p>
      </div>
      <div class="grid grid-cols-12 gap-7">
        <div class="col-span-12">
          <div class="grid grid-cols-1 gap-3">
            <div class="p-3 flex justify-between bg-white">
              <div>Address</div>
              <div class="underline">
                <a href="/accountsettings/address/addaddress">Add address</a>
              </div>
            </div>
            <% if(address){ %> <% if(address.addresses &&
            address.addresses.length>0){ %> <% let count = 1; %> <%
            address.addresses.forEach(address => {%>
            <div class="p-3 bg-white text-xs cursor-pointer">
              <div class="flex justify-between text-lg mb-2 font-medium">
                <div>Address <%= count++ %></div>
                <div onclick="showDeleteModal('<%= address._id %>')">
                  <i class="bi bi-trash3"></i>
                </div>
              </div>
              <div
                class="flex justify-between leading-[18px]"
                onclick="editAddress('<%= address._id %>')"
              >
                <div>
                  <div><%= address.name %></div>
                  <div><%= address.address %></div>
                  <div><%= address.city %></div>
                  <div><%= address.state %></div>
                  <div><%= address.pincode %></div>
                  <div><%= address.phone %></div>
                  <div><%= address.email %></div>
                </div>
                <div
                  class="flex justify-center items-center text-black font-medium"
                >
                  <i class="bi bi-chevron-right"></i>
                </div>
              </div>
            </div>
            <% }) %> <% }else{ %>
            <div>No address found</div>
            <% } %> <% } %>
          </div>
        </div>
      </div>
      <!-- Balance right space -->
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div
    id="deleteModal"
    class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50"
  >
    <div class="bg-white p-5 w-96">
      <h2 class="text-lg font-medium text-center mb-4">Delete Address</h2>
      <p class="text-sm text-gray-600 text-center mb-6">
        Are you sure you want to delete this address?
      </p>
      <div class="flex justify-center gap-3">
        <button id="cancelDelete" class="px-4 py-2 bg-gray-300 rounded text-sm">
          Cancel
        </button>
        <button
          id="confirmDelete"
          class="px-4 py-2 bg-black text-white rounded text-sm"
        >
          Delete
        </button>
      </div>
    </div>
  </div>

  <script src="/javascript/user/address.js"></script>

  <%- include('partials/footer'); -%>

